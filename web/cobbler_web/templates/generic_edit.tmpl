        {% for choice in item.choices %}
          {% ifequal item.value choice %}
        <option value="{{ choice }}" selected>{{ choice }}</A>
          {% else %}
        <option value="{{ choice }}">{{ choice }}</A>
          {% endifequal %}
        {% endfor %} 
      </select>
      {% endifequal %}
      {% ifequal item.html_element "multiselect" %}
      <div class="multiselect">
        <div class="multileft">
