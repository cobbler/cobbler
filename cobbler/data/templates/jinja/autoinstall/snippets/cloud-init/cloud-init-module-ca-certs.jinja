{#- https://cloudinit.readthedocs.io/en/latest/reference/modules.html#ca-certificates -#}
{%- if cloud_init_ca_certs is defined %}
ca_certs:
  {%- if cloud_init_ca_certs.remove_defaults %}
  remove_defaults: true
  {%- endif %}
  {%- if cloud_init_ca_certs.trusted %}
  trusted:
    {%- for cert in cloud_init_ca_certs.trusted %}
      {%- if "\n" in cert %}
    - |
      {{ cert|indent(6) }}  
      {%- else %}
    - {{ cert }}
      {%- endif %}
    {%- endfor %}
  {%- endif %}
{%- endif %}